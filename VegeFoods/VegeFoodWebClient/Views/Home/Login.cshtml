@{
    Layout = "_LoginAndRegister";
}

<section class="ftco-section contact-section">
    <div class="container">

        <div class="row block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form action="LoginUser" method="post" class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <h2>Login Here!</h2>
                    </div>
                    <div class="form-group">
                        <input id="userName" name="userName" type="text" class="form-control" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <input id="password" name="password" type="password" class="form-control" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <input  style="display: flex" type="submit" value="Login" class="btn btn-primary py-3 px-5">
                    </div>
                    <div class="form-group">
                        <a href="/Home/Register">Don't have an account? Register here!</a>
                    </div>
                </form>

            </div>

            <div class="col-md-6 d-flex">
                <div class="hero-wrap hero-bread" style="background-image: url('/images/loginbg.jpg');"></div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {

            if ("@ViewData["message"]" == "Incorrect userName or Password!") {
                alert("@ViewData["message"]");
            }
        });
    </script>
}
